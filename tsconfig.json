{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "declaration": true,
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}